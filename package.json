    "@types/mongoose": "5.3.7"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-app-production": "cd client && yarn build-browser && yarn build-ssr && cd .. && yarn copy-stuffs",
    "build-app-stage": "cd client && yarn build-browser && yarn build-ssr && cd .. && yarn copy-stuffs",
    "watch-ts": "yarn copy-stuffs && tsc --watch && yarn increase-memory",
    "watch-node": "nodemon dist/server/main.js",
    "copy-stuffs": "yarn copy-env && yarn copy-i18n",
    "copy-env": "shx mkdir -p dist && shx cp .env dist/",
    "copy-i18n": "shx mkdir -p dist/server/i18n dist/server/i18n/locales && shx cp -r server/i18n/locales/* dist/server/i18n/locales",
    "increase-memory": "node --max-old-space-size=8192",
    "prettier-format": "pretty-quick --pattern **/*.{ts,js,html,scss,css} --staged",
    "prepare": "husky install"
  },
  "lint-staged": {
    "client/src/**/*.ts": [
      "./node_modules/.bin/tslint --project ./client/tsconfig.json -c ./client/tslint.json --fix",
      "git add"
    ],
    "server/**/*.ts": [
      "./node_modules/.bin/tslint --project ./tsconfig.json -c ./tslint.json --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn increase-memory && yarn prettier-format && lint-staged"
    }
  }
}
